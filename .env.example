# KLINEO Frontend Environment Variables
# Copy this file to .env.local for local development
# DO NOT commit .env.local to Git (it's in .gitignore)

# Backend API URL (Railway)
VITE_API_BASE_URL=https://your-backend.railway.app

# Supabase (Frontend - use ANON key only)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Analytics (Optional)
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
VITE_PLAUSIBLE_DOMAIN=klineo.com

# Smoke Test page in production — set to "true" in Vercel (or your host) env vars to allow admins to open /#smoke-test
# If unset or not "true", admins who open the Smoke Test route are redirected with a message.
VITE_ENABLE_SMOKE_TEST_PAGE=true

# Manual payments to Safe (BSC USDT). When true, Payments screen and admin Payments tab use manual flow.
# CoinPayments: when false, CoinPayments checkout UI is admin-only (or hidden).
VITE_ENABLE_COINPAYMENTS=false

# Development (Local only - does NOT work in production)
VITE_DEV_ADMIN=false

# Quick Dev Login (Login page) — only shown when BOTH are set. Use a real Supabase user you created (e.g. via Sign up).
# VITE_DEV_LOGIN_EMAIL=your-dev@example.com
# VITE_DEV_LOGIN_PASSWORD=your-dev-password

# Database push from Cursor (scripts/push-db-to-supabase.mjs)
# Supabase Dashboard → Project Settings → Database → Connection string (URI)
# SUPABASE_DB_URL=postgresql://postgres.[ref]:[PASSWORD]@aws-0-[region].pooler.supabase.com:6543/postgres
SUPABASE_DB_URL=
